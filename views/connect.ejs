<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Connect Room</title>

		<style type="text/css" media="all">
			*,
			html,
			body {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			.container {
				width: 100%;
				height: 100vh;

				display: flex;
				align-items: center;
				justify-content: center;
				flex-direction: column;
			}

			.room {
				margin: 17px 0;
				padding: 5px 9px;
				border: 2px solid grey;
				width: 40%;
				font-size: 20px;
			}

			@media (max-width: 930px) {
				.room {
					width: 50%;
				}
			}

			@media (max-width: 680px) {
				.room {
					width: 60%;
				}
			}

			@media (max-width: 520px) {
				.room {
					width: 70%;
				}
			}

			@media (max-width: 400px) {
				.room {
					width: 85%;
				}
			}

			.connect {
				padding: 9px 29px;
				background-color: #731baa;
				color: white;
				font-size: 20px;
				border: 0;
				border-radius: 5px;
			}

			.connect:active {
				background-color: #731b99;
			}
		</style>
	</head>
	<body>
		<div class="container">
			<input class="room" type="text" placeholder="Room ID..." />
			<button class="connect">Connect</button>
		</div>

		<script charset="utf-8">
			const game = new URL(location).pathname

			const btn = document.querySelector('.connect')
			const input = document.querySelector('.room')

			btn.addEventListener('click', () => {
				if (!input.value) return
				else {
					location.assign(`${game}/${input.value}`)
				}
			})
		</script>
	</body>
</html>
