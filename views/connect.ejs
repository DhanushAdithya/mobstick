<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Connect Room</title>

		<style type="text/css" media="all">
			*,
			html,
			body {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			.container {
				width: 100%;
				height: 100vh;

				background-color: #323330;
				display: flex;
				align-items: center;
				justify-content: center;
				flex-direction: column;
			}

			.room {
				margin: 17px 0;
				padding: 14px 12px;
				border-radius: 4px;
				border: 0;
				outline: none;
				color: white;
				background-color: #484a46;
				width: 40%;
				font-size: 20px;
			}

			::placeholder {
				color: floralwhite;
			}

			@media (max-width: 930px) {
				.room {
					width: 50%;
				}
			}

			@media (max-width: 680px) {
				.room {
					width: 60%;
				}
			}

			@media (max-width: 520px) {
				.room {
					width: 70%;
				}
			}

			@media (max-width: 400px) {
				.room {
					width: 85%;
				}
			}

			.push_button {
				position: relative;
				width: 150px;
				color: #fff;
				background-color: #731baa;
				display: block;
				margin: 0 auto;
				border-radius: 5px;
				border: solid 1px transparent;
				text-align: center;
				padding: 10px 30px;
				font-size: 1.4rem;

				-webkit-transition: all 0.1s;
				-moz-transition: all 0.1s;
				transition: all 0.1s;

				-webkit-box-shadow: 0px 9px 0px #571780;
				-moz-box-shadow: 0px 9px 0px #571780;
				box-shadow: 0px 9px 0px #571780;
			}

			.push_button:active {
				-webkit-box-shadow: 0px 2px 0px #571780;
				-moz-box-shadow: 0px 2px 0px #571780;
				box-shadow: 0px 2px 0px #571780;
				position: relative;
				top: 7px;
			}
		</style>
	</head>
	<body>
		<div class="container">
			<input class="room" type="text" placeholder="Room ID..." />
			<button class="connect push_button">Connect</button>
		</div>

		<script charset="utf-8">
			const game = new URL(location).pathname

			const btn = document.querySelector('.connect')
			const input = document.querySelector('.room')

			btn.addEventListener('click', () => {
				if (!input.value) return
				else {
					location.assign(`${game}${input.value}`)
				}
			})
		</script>
	</body>
</html>
